section.section-grades
	.container
		form(ng-submit="addStudent()")
			table.table.table-striped
				tr
					td Name
					td GPA
					td
				tr(ng-repeat="student in students")
					td {{student.name}}
					td {{student.gpa}}
					td(ng-click="deleteStudent($index)") x
				tr
					td
						input(type="text", ng-model="studentName", required).input
					td
						input(type="text", ng-model="studentGPA", required).input.input--short
					td
						button.btn.btn-success.pull-right Add student